@model Project_63135935.Models.KhachHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Register.cshtml";
}

<div class="p-5">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
    </div>
    @using (Html.BeginForm("Create", "AdminKhachHangs_63135935", FormMethod.Post, new { enctype = "multipart/form-data", @class = "user" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                @Html.EditorFor(model => model.HoKH, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Họ Người Dùng" } })
                @Html.ValidationMessageFor(model => model.HoKH, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Tên Người Dùng" } })
                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group d-flex">
            @Html.LabelFor(model => model.GioiTinh, "Giới Tính:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    Nam @Html.RadioButtonFor(model => model.GioiTinh, "True", new { @checked = "checked" }) &nbsp;
                    Nữ @Html.RadioButtonFor(model => model.GioiTinh, "False")
                    @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "email", placeholder = "Email Đăng Nhập" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Địa Chỉ" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                @Html.EditorFor(model => model.SoDT, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Số Điện Thoại" } })
                @Html.ValidationMessageFor(model => model.SoDT, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Ngày Sinh" } })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.Matkhau, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "password", placeholder = "Mật Khẩu" } })
            @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
        </div>
        <input value="Register Account" type="submit" class="btn btn-primary btn-user btn-block" />
        <hr>
    }

    <hr>
    <div class="text-center">
        <a class="small" href="@Url.Action("Index", "Login_63135935")">Already have an account? Login!</a>
    </div>
</div>
