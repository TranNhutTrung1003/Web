@model Project_63135935.Models.LoaiSach

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <style>

        .control-label {
            text-align: center;
        }

        textarea {
            width: 100%;
            max-height: 500px;
        }

        .btn-event a {
            color: white;
            padding: 6px 12px;
            margin: 0px 10px;
            background-color: #4e73df;
        }
    </style>
</head>

<div class="container-fluid">
    <h3>THÊM LOẠI SÁCH MỚI</h3>
    <hr />
    @using (Html.BeginForm("Create", "AdminLoaiSaches_63135935", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group d-sm-block d-md-flex">
                @Html.LabelFor(model => model.MaLoaiSach, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" value="@ViewBag.MaLS" disabled readonly class="form-control" />
                    @*@Html.EditorFor(model => model.MaSach,"@ViewBag.MaSach", new { htmlAttributes = new { @class = "form-control",disabled = "disabled", @readonly = "readonly" } })*@
                    @Html.ValidationMessageFor(model => model.MaLoaiSach, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-sm-block d-md-flex">
                @Html.LabelFor(model => model.TenLoaiSach, "Tên Loại Sách", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenLoaiSach, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenLoaiSach, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-sm-block d-md-flex" style="justify-content: center; align-items: center">
                <div class="col-md-offset-2">
                    <input type="submit" value="Thêm sách" class="btn btn-default btn-primary" />
                </div>
                <div class="btn-event">
                    @Html.ActionLink("Quay Lại", "Index")
                </div>
            </div>
        </div>
    }



</div>